programa
{
    funcao inicio()
    {
        real base, altura, area

        escreva("Digite a base do Triângulo: \n")
        leia(base)
        escreva("Digite a altura do triângulo: \n")
        leia(altura)

        area = (base * altura) / 2

        escreva("A área do triângulo é: ", area, "\n")
    }
}